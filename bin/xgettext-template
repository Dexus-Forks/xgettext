#!/usr/bin/env node

var xgettext = require('..'),
  pkg = require('../package.json'),
  name = Object.keys(pkg.bin)[0];

require('colors');

var supported = xgettext.languages;

var argv = require('yargs')
  .usage([
    'Usage: ' + name + ' [OPTION] [INPUTFILE]...',
    '',
    pkg.description
  ].join('\n'))
  .alias({
    'D': 'directory',
    'o': 'output',
    'L': 'language',
    'k': 'keyword',
    'V': 'version'
  })
  .array('directory')
  .describe({
    'directory': 'add DIRECTORY to list for input files search',
    'output': 'write output to specified file',
    'language': [
      'recognise the specified language\n',
      '(',
      Object.keys(supported).map(function (key) { return supported[key]; }).join(', '),
      ')'
    ].join(''),
    'from-code': 'encoding of input files',
    'keyword': 'look for WORD as an additional keyword',
    'force-po': 'write PO file even if empty',
    'no-location': 'do not write \'#: filename:line\' lines'
  })
  .default({
    'directory': ['.'],
    'output': 'messages.po',
    'from-code': 'ascii',
    'keyword': ['_', 'gettext', 'ngettext:1,2'],
    'force-po': false,
    'no-location': false
  })
  .version(function() {
    return pkg.name + ' ' + pkg.version;
  })
  .help('help')
  .check(function (argv) {
    var equalsLanguage = function (ext) {
      return argv.language === supported[ext];
    };

    if (argv.language && !Object.keys(supported).some(equalsLanguage)) {
      throw new Error(('Language \'' + argv.language + '\' is not supported.').red);
    }

    argv['from-code'] = argv['from-code'].toLowerCase().replace(/\W/g, '');

    if (['utf8', 'ascii', 'base64'].indexOf(argv['from-code']) < 0) {
      throw new Error('Encoding of input files must be either utf8, ascii or base64.'.red);
    }

    if (argv._.length === 0) {
      throw new Error('No input file given.'.red);
    }

    return true;
  })
  .argv;

var input = argv._;
delete argv._;

var run = function (subject) {
  xgettext(subject, argv, function (po) {
    if (!argv.output && po) {
      process.stdout.write(po);
    }
  });
};

if (input[0] === '-') {
  var stdin = process.stdin;

  input = '';

  stdin
    .on('data', function (chunk) {
      input += chunk;
    })
    .on('end', function () {
      run(input);
    })
    .setEncoding(argv['from-code']);
} else {
  run(input);
}
